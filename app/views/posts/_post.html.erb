<%= turbo_frame_tag post do %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= post.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </p>

  <% if action_name != "show" %>
    <div class="flex flex-row">
      <%= button_to "Delete this post",
                    post_path(post),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure?" } },
                    class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this post',
                  edit_post_path(post),
                  class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    </div>
  <% end %>
<% end %>
